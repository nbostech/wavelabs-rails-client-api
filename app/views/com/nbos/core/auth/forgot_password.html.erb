

<% if (@login.present? && @login.message.present?) || flash[:notice] %>
    <%= render partial: "com/nbos/core/shared/alerts", locals: {obj: @login, notice: flash[:notice]} %>
<% end %>

<div class="container">    
		<div id="loginbox" style="margin-top:50px;" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
			<div class="panel panel-info">
				<div class="panel-heading">
					<div class="panel-title">Forgot Password</div>
					<div style="float:right; font-size: 80%; position: relative; top:-10px">
					 <%#= link_to "Sign In", com_nbos_core_login_path, style: "color: #fff " %>
					</div>
				</div>
				<div class="panel-body">				
					<%= form_for(@login, url: com_nbos_core_forgot_password_path, method: 'post', html: { role: "form", class: "form-horizontal" }) do |f| %>
						<div style="margin-bottom: 25px" class="input-group">
							<span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
							<%= f.email_field :email, autofocus: true, class: "form-control", title: "Please enter your email", placeholder: "example@test.com"  %>
              <%= errors_for @login, :email %>
						</div>
						<div class="form-group">
							<div class="col-sm-12 controls">
								<%= f.submit "Send", class: "btn btn-success" %>
							</div>
						</div>						
        <% end %>
				</div>
				<div class="panel-footer">
					<div class="form-group">
						<div class="col-md-12 control">
							<div style="font-size:85%">
								Don't have an account!
								<%= link_to "Sign Up Here", com_nbos_core_sign_up_path, style: "color: font-size:85% " %>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>    