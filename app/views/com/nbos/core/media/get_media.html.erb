
<% if (@message.present? && @message.message.present?) || flash[:notice] %>
    <%= render partial: "com/nbos/core/shared/alerts", locals: {obj: @message, notice: flash[:notice]} %>
 <% end %>

<div class="container">    
    <div id="signupbox" style="margin-top:50px" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
      <div class="panel panel-info">
        <div class="panel-heading">
          <div class="panel-title">Upload Picture</div>
          <div style="float:right; font-size: 85%; position: relative; top:-10px;">
          </div>
        </div>
        <div class="panel-body">
          <%= form_for(@media, url: com_nbos_core_update_media_path, method: 'put', html: { role: "form", class: "form-horizontal", multipart: true }) do |f| %>
            <div class="form-group">
              <div class="col-md-9">
               <%= image_tag(@media.mediaFileDetailsList[1].to_h["mediapath"]) if @media.present? && @media.mediaFileDetailsList.present?%>
              </div>
            </div>
            <div class="form-group">
              <label for="newPwd" class="col-md-3 control-label">Up Load</label>

              <div class="col-md-9">
                <%= f.file_field :newMedia, class: "form-control", id: "newMedia" %>
                <%= errors_for @media, :newMedia %>
              </div>
            </div>
            
            <div class="form-group">
              <div class="col-md-offset-3 col-md-9">
                <%= f.submit "Upload", class: "btn btn-success" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>